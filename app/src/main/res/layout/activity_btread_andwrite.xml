<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BTReadAndWrite">

    <TextView
        android:id="@+id/textViewBluetoothStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝牙状态："
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接中"
        android:textColor="#00BCD4"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewBluetoothStatus"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/buttonConnectDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="断开连接"
        android:onClick="disconnect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textViewReceivedMessages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:gravity="center"
        android:text="接收信息"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewBluetoothStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReceivedMessages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewSendData"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewSendData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="发送数据"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/listView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonMinFrequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="设置最小频率"
        android:textSize="18sp"
        android:onClick="onMinFrequencyClick"
        app:layout_constraintTop_toBottomOf="@+id/textViewSendData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonMaxFrequency"
        android:padding="5dp" />

    <Button
        android:id="@+id/buttonMaxFrequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:gravity="center"
        android:onClick="onMaxFrequencyClick"
        android:padding="5dp"
        android:text="设置最大频率"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonMinFrequency"
        app:layout_constraintTop_toBottomOf="@+id/textViewSendData" />

    <Button
        android:id="@+id/buttonSweepInterval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:gravity="center"
        android:onClick="onSweepIntervalClick"
        android:padding="5dp"
        android:text="设置扫频间隔"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonMinFrequency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinFrequency" />

    <Button
        android:id="@+id/buttonRadarDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:gravity="center"
        android:onClick="onRadarDistanceClick"
        android:padding="5dp"
        android:text="设置雷达监测距离"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonMinFrequency"
        app:layout_constraintTop_toBottomOf="@+id/buttonMaxFrequency" />

    <EditText
        android:id="@+id/editTextPersonName1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/buttonRadarDistance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <Switch
        android:id="@+id/switchHex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEX"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonName1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="sead_msg"
        android:padding="8dp"
        android:text="发送"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switchHex"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonName1"
        app:layout_constraintWidth_percent="0.35" />

    <Button
        android:id="@+id/buttonClearMessages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="clearMessages"
        android:text="清空"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonName1"
        app:layout_constraintStart_toEndOf="@+id/buttonSend"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintWidth_percent="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>
